!!! 5
%html
  %head
    %title StarApp
    %link{rel: "stylesheet", href: "/css/bootstrap.css"}
    %link{rel: "stylesheet", href: "/css/main.css"}
    %link{rel: "icon", type: "image/x-icon", href: "/favicon.ico"}
  %body{:"data-username" => locals[:username]}
    %div{class: "navbar navbar-inverse navbar-static-top"}
      %a{class: "navbar-brand", href: "/"} StarApp
      %form{class: "navbar-form pull-left", action: "/", method: "get", id: "nav-form"}
        %input{type: "text", class: "form-control", style: "width: 200px;", placeholder: "GitHub username", name: "username", value: username}
        %button{type: "submit", class: "btn btn-primary"} Get languages
    %div{class: "container"}
      %div{class: "row"}
        %div{class: "col-12"}
          = yield
          %small
            by
            %a{href: "http://sleepykyoto.com"} @niceguyjames
            &middot;
            %a{href: "https://github.com/niceguyjames/favstarredlanguages"} fork
    %script{src: "/js/Chart.js"}
    %script{src: "https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    %script{src: "/js/handlebars-1.0.0.js"}
    %script{src: "/js/ember-1.0.0-rc.7.js"}
    
    %script{src: "/js/main.js"}
